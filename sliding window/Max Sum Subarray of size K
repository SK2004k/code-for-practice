//{ Driver Code Starts
#include<bits/stdc++.h> 
using namespace std; 

// } Driver Code Ends
class Solution{   
public:
    long maximumSumSubarray(int k, vector<int> &arr , int n){
        long max1=0;
        for(int i=0;i<k;i++)
        max1 += arr[i];
        
        long sum = max1;
        
        for(int i=0 , j= k;j<n;j++,i++)
        {
            sum =  sum + arr[j] - arr[i];
            
            if(max1<sum)
            max1=sum;
        }
        return max1;
        // code here 
    }
};

//{ Driver Code Starts.
int main() 
{ 
    int t;
    cin>>t;
    while(t--)
    {
        int N,K;
        cin >> N >> K;;
        vector<int>Arr;
        for(int i=0;i<N;++i){
            int x;
            cin>>x;
            Arr.push_back(x);
        }
        Solution ob;
        cout << ob.maximumSumSubarray(K,Arr,N) << endl;
    }
    return 0; 
} 
// } Driver Code Ends
